{
  "name": "@hawk-tracker/monorepo",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "turbo run build",
    "build:clean": "turbo run clean && turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"packages/**/*.{ts,js,json,md}\"",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "build-and-fix": "turbo run lint:fix && turbo run build",
    "prepare": "husky",
    "version-packages": "changeset version",
    "release": "pnpm build-and-fix && pnpm version-packages && pnpm publish -r --no-git-checks"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.1",
  "pnpm": {
    "workspace": "packages/*, examples"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rollup": "^4.46.2",
    "rollup-plugin-dts": "^6.2.1",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2",
    "tslib": "^2.8.1"
  },
  "lint-staged": {
    "packages/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
